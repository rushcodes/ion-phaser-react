{
  "name": "@ion-phaser/react",
  "version": "1.3.1",
  "description": "React specific wrapper for @ion-phaser/core",
  "keywords": [
    "ionic",
    "phaser",
    "framework",
    "react",
    "webcomponent",
    "mobile",
    "app",
    "webapp",
    "web component",
    "web components",
    "progressive web app",
    "pwa"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rushcodes/ion-phaser.git"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "del /s dist",
    "compile": "npm run tsc",
    "tsc": "tsc -p .",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix --ignore-pattern 'src/react-component-lib/*' --no-eslintrc -c .eslintrc.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@ion-phaser/core": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "23.3.9",
    "@types/node": "13.13.0",
    "@types/react": "16.7.6",
    "@types/react-dom": "16.0.9",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^25.4.0",
    "jest-dom": "^3.0.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "rollup": "^1.21.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "typescript": "^3.3.4000"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "phaser": "^3.55.2"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
